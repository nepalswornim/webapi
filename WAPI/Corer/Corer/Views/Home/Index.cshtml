@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_CorerLayout.cshtml";

}
@section Styles {
    <link href="@Url.Content("~/Views/custom.css")" rel="stylesheet" type="text/css" />
}


<div class="banner">WELCOME TO CORER!</div>
<div class="login-page">
    <div class="form">
        <form class="register-form">
            <input type="text" placeholder="name" />
            <input type="password" placeholder="password" />
            <input type="text" placeholder="email address" />
            <button>create</button>
            <p class="message">Already registered? <a rel="nofollow" rel="noreferrer" href="#">Sign In</a></p>
        </form>
        <form class="login-form">
            <input type="text" placeholder="username" />
            <input type="password" placeholder="password" />
 <button onclick="location.href='@Url.Action("Login", "Home")'">login</button>
                     
            @Html.ActionLink("kasnk","Login","Home")
            <p class="message">Not registered? <a rel="nofollow" rel="noreferrer" href="#">Create an account</a></p>
        </form>
    </div>
</div>

<style>
    <style > .login-page {
        width: 360px;
        padding: 8% 0 0;
        margin: auto;
    }

    .form {
        position: relative;
        z-index: 1;
        background: #FFFFFF;
        max-width: 360px;
        margin: 0 auto 100px;
        padding: 45px;
        text-align: center;
        box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.2), 0 5px 5px 0 rgba(0, 0, 0, 0.24);
    }

        .form input {
            font-family: "Roboto", sans-serif;
            outline: 0;
            background: #f2f2f2;
            width: 100%;
            border: 0;
            margin: 0 0 15px;
            padding: 15px;
            box-sizing: border-box;
            font-size: 14px;
        }

    .butto {
        font-family: "Roboto", sans-serif;
        text-transform: uppercase;
        outline: 0;
        background: #4CAF50;
        width: 100%;
        border: 0;
        padding: 15px;
        color: #FFFFFF;
        font-size: 14px;
        -webkit-transition: all 0.3 ease;
        transition: all 0.3 ease;
        cursor: pointer;
    }

    .form button {
        font-family: "Roboto", sans-serif;
        text-transform: uppercase;
        outline: 0;
        background: #4CAF50;
        width: 100%;
        border: 0;
        padding: 15px;
        color: #FFFFFF;
        font-size: 14px;
        -webkit-transition: all 0.3 ease;
        transition: all 0.3 ease;
        cursor: pointer;
    }

        .form button:hover, .form button:active, .form button:focus {
            background: #43A047;
        }

    .form .message {
        margin: 15px 0 0;
        color: #b3b3b3;
        font-size: 12px;
    }

        .form .message a {
            color: #4CAF50;
            text-decoration: none;
        }

    .form .register-form {
        display: none;
    }

    .container {
        position: relative;
        z-index: 1;
        max-width: 300px;
        margin: 0 auto;
    }

        .container:before, .container:after {
            content: "";
            display: block;
            clear: both;
        }

        .container .info {
            margin: 50px auto;
            text-align: center;
        }

            .container .info h1 {
                margin: 0 0 15px;
                padding: 0;
                font-size: 36px;
                font-weight: 300;
                color: #1a1a1a;
            }

            .container .info span {
                color: #4d4d4d;
                font-size: 12px;
            }

                .container .info span a {
                    color: #000000;
                    text-decoration: none;
                }

                .container .info span .fa {
                    color: #EF3B3A;
                }


    .banner {
        font-family: Lato;
        z-index: 1;
        width: 300px;
        height: 40px;
        line-height: 40px;
        text-align: center;
        text-transform: uppercase;
        letter-spacing: 1px;
        color: #fff;
        background: #4CAF50;
        left: 50%;
        margin-left: -150px;
        top: 40px;
        position: relative;
    }

        .banner:before,
        .banner:after {
            z-index: -1;
            content: "";
            display: block;
            top: 5px;
            position: absolute;
            border-top: 20px solid #4CAF50;
            border-bottom: 20px solid #4CAF50;
        }

        .banner:before {
            right: 100%;
            margin-right: 0;
            border-right: 20px solid #4CAF50;
            border-left: 5px solid transparent;
        }

        .banner:after {
            left: 100%;
            margin-left: 0;
            border-left: 20px solid #4CAF50;
            border-right: 5px solid transparent;
        }

    body,
    html {
        background-color: AntiqueWhite;
    }
</style>


</style>
<script>
    $('.message a').click(function () {
        $('form').animate({ height: "toggle", opacity: "toggle" }, "slow");
    });
</script>
